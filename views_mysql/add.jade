doctype html
html
  head
    meta(charset="utf-8")
  body
    h1
      a(href="/") Server Side JavaScript2
    ul
      each topic in data
        li
          a(href='/'+topic.id)= topic.title
    article
      form(action="/add" method="post")
        p
          input(type="text" name="title" placeholder="title")
        p
          input(type="text" name="author" placeholder="author")
        p
          textarea(name="description" placeholder="body")
        p
          input(type="submit")
