doctype html
html
  head
    meta(charset="utf-8")
  body
    h1
      a(href="/") View
    ul
      each topic in data
        li
          a(href='/'+topic.id)= topic.title

    article

      if topic
        h2= topic.title
        = topic.description
        div= 'by ' + topic.author
      else
        h2 Welcome
        | This is server side JavaScript tutorial.
    ul
      li
        a(href='/add') add
      if topic
        li
          a(href="/"+topic.id+'/edit') edit
        li
          a(href="/"+topic.id+'/delete') delete
