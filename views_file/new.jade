doctype html
html
  head
    meta(charset="utf-8")
  body
    h1
      a(href="/") Server Side JavaScript
    ul
      each topic in topics
        li
          a(href='/'+topic)= topic
    article
      form(action="/" method="post")
        p
          input(type="text" name="title" placeholder="title")
        p
          textarea(name="content" placeholder="content")
        p
          input(type="submit")
