doctype html
html
  head
    meta(charset="utf-8")
  body
    h1
      a(href="/") Edit page

    article
      form(action="/"+topic.id+"/edit" method="post")
        p
          input(type="text" name="updated_title" value=topic.title placeholder=topic.title)
        p
          input(type="text" name="updated_author" value=topic.author placeholder=topic.author)
        p
          textarea(name="updated_desc" value=topic.description placeholder=topic.description)
        p
          input(type="submit")
